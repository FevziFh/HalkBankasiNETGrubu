
@{
    ViewData["Title"] = "Oturum";
}

<h1>Oturum</h1>

<p>
    @Context.Session.GetString("ad")
</p>
<p>
    @if (Context.Session.GetString("rol") == "user")
    {
        <b>Bu sayfaya sadece kullanıcılar girebilir.</b>
    }
</p>
<div class="card">
    <div class="card-header">
        <h3>Oturum Bilgileri</h3>
    </div>
    <div class="card-body">
        <b>Personel Adı:</b> @ViewBag.prsAdi<br />
        <b>Personel Mail:</b> @ViewBag.prsMaili<br />
        <b>Personel Yaş:</b> @ViewBag.prsYas<br />
        <b>Personel Rol:</b> @ViewBag.prsRol<br />
    </div>
</div>