@using _37_MVC_FirstWebPage.Models;
@model _37_MVC_FirstWebPage.Models.Movie;
@{
    ViewData["Title"] = "Index";
}

<h1>Home Page</h1>
<p style="font-weight:bold; color:red;">
    The Movie : <i>@Model.Title</i><br/>
    Released Date: <i>@Model.ReleaseDate</i>
</p>

<p>Merhaba Saat Şuanda: @DateTime.Now Oldu.</p>
@{
    string helloWorld = "<b>Merhaba Dünya!</b>";
    //int sayi1 = 10;
    <b>Fatih ALKAN</b>
}

@if (DateTime.Now.Year>=2023)
{
    <span>The year 2024</span>
}
else
{
    <span>The year 2023</span>  
}
<hr />
<p>Bilgi : @helloWorld</p>
<p>HTML : @Html.Raw(helloWorld)</p>

@{
    List<string> names = new List<string> { "Fatih", "Mehmet", "Kadir", "Hüseyin", "Osman" };
}
<ul>
    @for (int i = 0; i < names.Count; i++)
    {
        <li>@names[i]</li>
    }

</ul>

<hr />

@{
    List<Movie> movies = new();
    movies.Add(new Movie(){Id=1,Title="The GodFather",ReleaseDate=new DateTime(1972,3,24)});
    movies.Add(new Movie() { Id = 2, Title = "ForestGumb", ReleaseDate = new DateTime(1994, 7, 6) });
    movies.Add(new Movie() { Id = 3, Title = "Fight Club", ReleaseDate = new DateTime(1999, 10, 15) });
}

<ul>
    @foreach (var item in movies)
    {
        <li>@item.Id)@item.Title - @item.ReleaseDate</li>
    }
</ul>