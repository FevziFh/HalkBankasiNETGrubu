@using _42_MVC_Validation.Classes;
@{
    ViewData["Title"] = "Home Page";
}
@model SystemUser
<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    <div class="card">
        <h2>Kayıt Sayfası</h2>
        <div class="card-body">
            <form asp-action="Index" asp-controller="Home" method="post">
                <div class="form-group">
                    <label asp-for="UserName">Kullanıcı Adı:</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdendificationNumber">TC Kimlik:</label>
                    <input asp-for="IdendificationNumber" class="form-control" />
                    <span asp-validation-for="IdendificationNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Score">Puan:</label>
                    <input asp-for="Score" class="form-control" />
                    <span asp-validation-for="Score" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MailAdress">EMail:</label>
                    <input asp-for="MailAdress" class="form-control" />
                    <span asp-validation-for="MailAdress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Şifre:</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordConfirm">Şifre Tekrar:</label>
                    <input asp-for="PasswordConfirm" class="form-control" />
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                </div>
                <button type="submit" class="btn-danger"></button>
            </form>
        </div>
    </div>

    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
